#%Module

# help
proc ModulesHelp { } {
        global version

        puts stderr "\tThis module loads chdb, version intelmpi."
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"chdb, for use with bullxmpi"

conflict chdb-bullxmpi chdb-intelmpi

# for Tcl script use only
set     version      "0.75"

# set chdb env variable for mpi slaves
setenv CHDB_MPI_CMD "/bin/bash -c 'ssh localhost BINDIR/slave-wrapper.sh \$(pwd) \$(module li -t 2>&1|tail -n +2|base64 -w 0) %MPI_SLAVES% %HOSTNAME% %COMMAND%'"
#
# change the path to chdb
prepend-path PATH "BINDIR"
